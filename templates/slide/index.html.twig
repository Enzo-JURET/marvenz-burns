{% extends 'base.html.twig' %}

{% block title %}Slide{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h1 class="text-center">SLIDE</h1>
</div>
<div class="col-sm-8 offset-2">
    <hr>
</div>
<div class="col-sm-8 offset-2">
    <table class="table">
        <thead>
            <tr>
                <th>Titre du Slide</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slide in slides %}
            <tr>
                <td>{{ slide.titreSlide }}</td>
                <td>
                    <a href="/">Aperçu</a>
                    <a href="{{ path('slide_edit', {'idSlide': slide.idSlide}) }}">Modifier</a>
                    {{ include('slide/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('slide_new') }}">
        <button type="submit" class="btn btn-primary" >Créé une nouvelle slide</button>
    </a>
</div>
{% endblock %}
