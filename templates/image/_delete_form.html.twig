<form method="post" action="{{ path('image_delete', {'idImage': image.idImage}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cette slide ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.idImage) }}">
    <button class="btn">Supprimer</button>
</form>
