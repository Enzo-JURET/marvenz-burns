{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1 class="text-center">IMAGE</h1>
</div>
<div class="col-sm-8 offset-2">
    <hr>
</div>
<div class="col-sm-8 offset-2">
    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <td>
                    <img class="img-slide" src="{{ asset('img/' ~ image.getLienImage) }}">
                </td>
            </tr>
            <tr>
                <th>Nom de l'image</th>
                <td>{{ image.titreImage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('image_index') }}">Retour a la liste</a>

    {{ include('image/_delete_form.html.twig') }}
</div>
{% endblock %}
